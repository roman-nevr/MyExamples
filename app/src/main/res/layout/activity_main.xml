<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="ru.rubicon.myexamples.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"/>

            <Button
                android:id="@+id/btn_coordinator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:text="Coordinator Layout"/>

            <Button
                android:id="@+id/btn_card_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_coordinator"
                android:text="Card Scroll"/>

            <Button
                android:id="@+id/btn_text_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_card_scroll"
                android:text="Text Animation"/>

            <Button
                android:id="@+id/btn_custom_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_text_animation"
                android:background="@drawable/np_test2"
                android:text="@string/custom_view_name"/>

            <Button
                android:id="@+id/btn_remember_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_custom_view"
                android:text="@string/custom_view_name"/>

            <Button
                android:id="@+id/btn_hero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_remember_words"
                android:text="Heroes"/>

            <Button
                android:id="@+id/btn_flip_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flip activity"/>

            <Button
                android:id="@+id/btn_pager_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pager View example"/>

            <Button
                android:id="@+id/btn_barc_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BarCode example"/>
            <Button
                android:id="@+id/btn_drag_n_drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drag'n'drop example"/>
            <Button
                android:id="@+id/btn_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Youtube Api Example"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
