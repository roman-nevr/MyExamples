<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomViewExample">

    <ru.rubicon.myexamples.views.DoublesideView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:frontSideString="hello111111111111111"
        app:textSize="32dp"
        app:backSideString="bye!"
        app:exampleColor="@color/colorAccent"
        />

    <Button
        android:background="@drawable/np_test2"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:textSize="24dp"
        android:id="@+id/button" />

    <TextView
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="0dp"
        android:textSize="24dp"
        android:text="y111111111111l"/>

    <TextView
        android:background="@drawable/np_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:paddingTop="0dp"
        android:textSize="24dp"
        android:id="@+id/editText"
        android:text="11111111111111111111111111l"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ru.rubicon.myexamples.views.DoublesideView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            app:textSize="48dp"
            app:frontSideString="1111y"/>
        <ru.rubicon.myexamples.views.DoublesideView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            app:textSize="48dp"
            app:frontSideString="1111y"/>
        <ru.rubicon.myexamples.views.DoublesideView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            app:textSize="48dp"
            app:frontSideString="1111y"/>
    </LinearLayout>

</LinearLayout>